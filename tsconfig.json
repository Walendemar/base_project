{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "paths": {
      "@src/*": ["*"],
      "@css/*": ["./src/css"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}
